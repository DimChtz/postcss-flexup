{
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:jest/recommended"
  ],
  "rules": {
    "jest/expect-expect": "off",
    "semi": [2, "always"],
    "quotes": ["error", "single"]
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "presets": [
      "@babel/preset-env"
    ]
  },
  "env": {
    "node": true,
    "es6": true
  }
}
